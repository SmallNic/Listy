
<div class ="list_item">

  <div class = "title">
    <%= @list.title %>
  </div>

  <div class = "items">
      <% @list.items.each do |item| %>
        <div class="items_list">
          <ul>
            <li><%= item.description %>
                <%= button_to 'Delete', list_item_path(@list, item), method: :delete, class:"itemButton" %></li>
                <%= button_to 'Edit', edit_list_item_path(@list, item), method: :get, class:"itemButton" %></li>

          </ul>
        </div>
      <% end %>
  </div>

</div>

<div class="new_button">
  <%= button_to 'Add New List Item', new_list_item_path(@list), method: :get %>
  <%= button_to 'Edit List Title', edit_list_path(@list), method: :get %>
</div>
