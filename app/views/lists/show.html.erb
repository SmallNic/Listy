<nav>
  <div class="options">
    <%= button_to 'Add New List Item', new_list_item_path(@list), method: :get, class: "option-button" %>
    <%= button_to 'Edit List Title', edit_list_path(@list), method: :get, class: "option-button" %>
    <%= button_to 'Delete List', list_path(@list), method: :delete, class: "option-button" %>
  </div>
</nav>

<main>
  <div class ="list_items">

    <div class = "title row">
      <%= @list.title %>
    </div>

    <div class = "items row">
        <% @list.items.each do |item| %>
          <div class="row item">

            <div class="list_item">
              <span class="wrapper">
              <%= button_to "x", list_item_path(@list, item), method: :delete, class:"delete" %>
              <p class="hoverCaption">DELETE ME</p>
              </span>

              <span class="checkWrapper">

                <span class="markComplete" id="<%=item.id%>">&#10003;
                  <p class="hoverCaption">COMPLETE ME</p>
                </span>

                <span class="editItem">
                  <p class="hoverCaption">EDIT ME</p>
                  <% if item.completed %>
                    <%= link_to item.description, edit_list_item_path(@list, item), class:"itemText itemComplete"%>
                  <% else %>
                    <%= link_to item.description, edit_list_item_path(@list, item), class:"itemText"%>
                  <% end %>
                </span>

              </span>
            </div>

          </div>
        <% end %>
    </div>

  </div>
</main>
